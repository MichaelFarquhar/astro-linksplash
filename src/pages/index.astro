---
import Banner from "../components/intro/Banner.astro";
import Intro from "../components/intro/Intro.astro";
import { THEME, TITLE } from "../content";
---

<html lang="en" class={THEME}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{TITLE} | Linksplash</title>
	</head>
	<body class="bg-zinc-100 dark:bg-zinc-900">
		<Banner />
        <div class="w-100 flex flex-col items-center">
            <Intro />
        </div>
	</body>
</html>
