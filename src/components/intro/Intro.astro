---
import { PROFILE_IMAGE, DESCRIPTION, TITLE } from "../../content";
import Tags from "./Tags.astro";
---

<div class="absolute top-28 bg-white flex items-center flex-col text-center space-y-6 p-10 max-w-lg border rounded-3xl shadow-[rgba(0,_0,_0,_0.24)_0px_3px_8px]">
    <img class="w-32 h-32 rounded-full object-cover shadow-sm border" src={`/${PROFILE_IMAGE}`} alt="Small avatar">
    <div class="flex flex-col space-y-4">
        <h1 class="text-3xl font-bold">{TITLE}</h1>
        <p>{DESCRIPTION}</p>
    </div>
    <Tags />
</div> 