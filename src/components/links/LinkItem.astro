---
interface Props {
  title: string;
  description?: string;
  url: string;
}

const { title, description, url } = Astro.props;

const formattedURL = (url: string) => url.replace(/^https?:\/\//, '');
---

<div class="flex items-center space-x-4 p-4 transition bg-gray-50 border rounded-3xl shadow-sm hover:shadow-md hover:cursor-pointer">
    <img class="w-14" src={`https://api.faviconkit.com/${formattedURL(url)}/64`} alt={title}>
    <div class="flex flex-col justify-center space-y-1">
        <h3 class="text-xl font-bold">{title}</h3>
        <p class="text-sm">{description}</p>
    </div>
</div>