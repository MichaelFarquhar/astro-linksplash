---
import { Image } from 'astro:assets';

interface Props {
    imageSrc: string;
}

const { imageSrc } = Astro.props;
---

{
    imageSrc !== '' && (
        <Image
            width="112"
            height="112"
            class="rounded-full object-cover shadow-sm border dark:border-zinc-600"
            src={`/${imageSrc}`}
            alt="Profile"
        />
    )
}
